<div class="col-{{project.data.size}} pr-card">
  <a href="{{project.url}}">
    <img class="pr-pic" 
      src="/projects/{{ project.fileSlug }}/assets/{{ project.data.thumbnail }}"
      alt="{{project.data.imageAlt}}">
    <div class= "pr-body">
      <h2>{{ project.data.title }}</h2>
      <p class="pr-subtitle">{{ project.data.subtitle }}</p>
      <p class="pr-info">{{ project.data.info }}, {{ project.data.year }}</p>
    </div>
  </a>
  <p class="pr-categories">
    {%- for category in project.data.categories -%}
      <a href="/categories/{{ category | slug }}/"><span class="tag tag--small">{{category | capitalize}}</span></a>
      {%- if not loop.last -%}
        &nbsp;
      {%- endif -%}
    {%- endfor -%}
  </p>

  {# Lookup the page size #}
  {% set lookupKey = project.url.slice(1) ~ 'index.html' %}
  <p class="pr-info">{{ siteSize.pageSizes[lookupKey] | round(1) or 'Unknown' }} KB 
    <span class="info-icon" tabindex="0">â“˜
      <span class="tooltip">
        Calculated page size including HTML and linked assets (images, code, etc.)
      </span>
    </span>
  </p> 
</div>