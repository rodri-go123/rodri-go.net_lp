---
css:
  - /public/_navbar.css
  - /public/_footer.css
  - /public/application.css
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <meta name="author" content="Rodrigo Cardoso">
    <meta name="description" content="Rodrigo is a toolmaker within design. His research interest lies in the philosophical, creative and social dimensions of digital technology.">
    <meta name="keywords" content="Rodrigo Cardoso, design, graphic, research, autonomous, web, computation, digital, culture, web">

    {% if css %}
      {% for sheet in css %}
        <link rel="stylesheet" href="{{ sheet }}">
      {% endfor %}
    {% endif %}
    
  </head>

  <body>
    {# navbar #}
    <nav id="navbar" class="flex-center">
      <div class="nav-wrapper full-width">
        <div class="nav-left flex-center"><h1 class="nav-header"><a href="/">rodri-go.net</a></h1></div>
        <div class="nav-right flex-center">
          <a href="{% if page.url == '/' %}#work{% else %}/#work{% endif %}" class="nav-btn {% if page.url == '/' %}active{% endif %}">Work &#8623;</a>
          <a href="/about" class="nav-btn about {% if page.fileSlug == 'about' %}active{% endif %}">About</a>
          <a href="/contact" class="nav-btn contact {% if page.fileSlug == 'contact' %}active{% endif %}">Contact</a>
          <a href="/blog" class="nav-btn blog {% if page.fileSlug == 'blog' %}active{% endif %}">Blog</a>
        </div>
      </div>
    </nav>

    <div id="main">
      {{ content | safe }}
    </div>

    {# footer #}
    <div id="footer" class="flex-center">
      <div class="foot-wrapper full-width">

        <div class="foot-left flex-center">  
          <p>Get in touch</p>
          <a href="mailto:rodrigo@rodri-go.net">rodrigo@rodri-go.net</a>
          <a href="https://github.com/rodri-go123">github</a>
          <a href="https://www.instagram.com/djingerale/">instagram</a>   
        </div>

        <div class="foot-right flex-center">
          <p>This site is designed to minimise energy use.</p>
          <p>Total site size: {{ (siteSize.totalSize / 1024) | round(2) }} MB</p>
        </div>

      </div>
    </div>

  </body>
</html>
